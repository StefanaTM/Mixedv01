<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayersRoomActivity"
    android:background="#FFF5BE">


        <LinearLayout
            android:id="@+id/pin_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txtPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_pin"
                android:textSize="38sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:shadowColor="#eeeeee"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"/>

            <TextView
                android:id="@+id/pin_generated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:shadowColor="#eeeeee"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"/>

        </LinearLayout>

            <TextView
                android:id="@+id/waitingForPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/pin_layout"
                android:textStyle="bold"
                android:textColor="#8F1313"
                android:text="@string/txt_waitingForPlayers"
                android:shadowColor="#eeeeee"
                android:layout_marginTop="10dp"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2" />

        <ListView
            android:id="@+id/playersListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/waitingForPlayers"
            android:padding="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/plname_btnNext"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_next"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:text="@string/next_btn"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp" />


</RelativeLayout>